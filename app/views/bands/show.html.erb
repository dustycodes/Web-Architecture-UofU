<p id="notice"><%= notice.html_safe if notice %></p>

<div class="page-header">
  <h1>Band Info <small>these guys rock</small></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="jumbotron text-center">
      <%= selfieMarkup(@band) %><br> 
      <%= render 'user' %>
      <%= render 'venue' %>  <br>
    </div>
  </div>
  <div class="col-md-8">
    <div class="list-group">
      <li class="list-group-item"><h4>Name: <small><%= @band.name %></small></h4></li>
      <li class="list-group-item"><h4>Genre: <small><%= @band.genre.title %></small></h4></li>
      <li class="list-group-item"><h4>User Rating:</h4><span class="stars"><%= @band.user_rating %></span></li>
      <li class="list-group-item"><h4>Venue Rating:</h4><span class="stars"><%= @band.venue_rating %></span></li>
      <li class="list-group-item"><h4>Owner: <small><%= link_to @band.user.name, @band.user %></small></h4></li>
    </div>
  </div>
</div>

<% if current_user.id == @band.user_id %>
  <%= link_to '<button class="btn btn-info">Edit</button>'.html_safe, edit_band_path(@band) %>
<% end %>
<%= link_to '<button class="btn btn-default">Back</button>'.html_safe, bands_path %>
