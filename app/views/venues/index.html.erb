<div id="notice"><%= notice.html_safe if notice %></div>

<div class="page-header">
  <h1>Venues <small>all the hottest spots</small></h1>
</div>

<%= link_to '<button class="btn btn-success">New Venue</button>'.html_safe, new_venue_path %>

<table class="table">
  <caption>Venues in your location</caption>
  <thead>
    <tr>
      <th class="text-left">Location</th>
      <th class="text-center">Selfie</th>
      <th class="text-left">Name</th>
      <th class="text-right">Age required</th>
      <th class="text-right">Prices</th>
      <th class="text-center">Rating</th>
      <th class="text-left">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues_near_me.each do |venue| %>
      <tr>
        <td class="text-left"><%= venue.location %></td>
        <td class="text-center"><%= selfieMarkup(venue) %></td>
        <td class="text-left"><%= venue.name %></td>
        <td class="text-right"><%= venue.age_required %></td>
        <td class="text-right"><span class="stars"><%= venue.prices %></span></td>
        <td class="text-center"><span class="stars"><%= venue.rating %></span></td>
        <td class="text-left"><%= venue.user.name %></td>
        
        <td><%= link_to '<button class="btn btn-info">Show</button>'.html_safe, venue %></td>
        <% if current_user.id == venue.user_id %>
          <td><%= link_to '<button class="btn btn-warning">Edit</button>'.html_safe, edit_venue_path(venue) %></td>
          <td><%= link_to '<button class="btn btn-danger">Destroy</button>'.html_safe, venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
	  <td></td>
	  <td></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

