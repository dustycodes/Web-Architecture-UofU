<p id="notice"><%= notice.html_safe if notice %></p>

<div class="page-header">
  <h1>Venue Details <small>clever sub-title</small></h1>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="jumbotron text-center"> 
      <%= selfieMarkup(@venue) %> <br> 
      <%= render 'rating' %>
      <%= render 'pricing' %>  <br>
    </div>
  </div>
  <div class="col-md-8">
    <ul class="list-group">
      <li class="list-group-item">
	<h4>Name: <small><%= @venue.name %></small></h4>
      </li>
      <li class="list-group-item">
	<h4>Location: <small><%= @venue.location %></small></h4>
      </li>
      <li class="list-group-item">
	<h4>Rating:</h4> <span class="stars"><%= @venue.rating %></span>
      </li>
      <li class="list-group-item">
	<h4>Prices:</h4> <span class="stars"><%= @venue.prices %></span>
      </li>
      <li class="list-group-item">
	<h4>Age Required: <small><%= @venue.age_required %></small></h4>
      </li>
      <li class="list-group-item">
	<h4>Owner: <small><%= link_to @venue.user.name, @venue.user %></small></h4>
      </li>
    </ul>
  </div>
</div>

<% if current_user.id == @venue.user_id %>
	<%= link_to '<button class="btn btn-info">Edit</button>'.html_safe, edit_venue_path(@venue) %> 
<% end %>
<%= link_to '<button class="btn btn-default">Back</button>'.html_safe, venues_path %>
